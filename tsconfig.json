{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": ["es2019"],
    "module": "commonjs",
    "target": "es2019",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"],
    "outDir": "./build",
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
  
  